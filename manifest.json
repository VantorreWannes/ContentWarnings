  {
    "manifest_version": 2,
    "name": "Content Warnings extention",
    "version": "0.0",

    "description": "Warns about user-defined keywords on webpages",
    "homepage_url": "https://github.com/VantorreWannes/ContentWarnings",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["detect.js"]
      }
    ],
    "browser_action": {
      "default_title": "Content Warnings"
    },
  
    "web_accessible_resources": [
      "data/flag_phrases.json",
      "data/content_categories.json"
    ]
  }
  